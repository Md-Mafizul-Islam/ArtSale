@model Project8MvcWithEntityFramework.ViewModel.ArtistVM

@{
    ViewBag.Title = "Create";
}
<h2 style="text-align:center; background-color:aliceblue;font-size:40px;">Artist Registation</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h2>Register in artist Name</h2>
    <table class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <tr class="form-group table">
            @Html.LabelFor(model => model.ArtistName, htmlAttributes: new { @class = "control-label col-md-2" })
            <td class="col-md-10">
                @Html.EditorFor(model => model.ArtistName, new { htmlAttributes = new { @class = "form-control control-label col-md-10" } })
                @Html.ValidationMessageFor(model => model.ArtistName, "", new { @class = "text-danger" })
            </td>
         
        </tr>

        <tr class="form-group">
            <td class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </td>
        </tr>

    </table>
}
<hr />

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
